                           <Label fx:id="outputDirectory" accessibleText="Click to change." onMouseClicked="#selectNewFolder" textAlignment="RIGHT" BorderPane.alignment="CENTER" styleClass="sub_text">
                              <cursor>
                                 <Cursor fx:constant="HAND"/>
                              </cursor>
                           </Label>
                        </right>
                        <left>
                           <Label fx:id="outputDirectoryInfo" text="Save Music To:" BorderPane.alignment="CENTER" styleClass="sub_text" />
