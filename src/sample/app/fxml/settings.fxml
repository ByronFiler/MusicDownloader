                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Never"/>
                                 <String fx:value="Albums Only"/>
                                 <String fx:value="Songs Only"/>
                                 <String fx:value="Always"/>
                              </FXCollections>
                           </items>
                        </right>
                     </BorderPane>
                     <BorderPane prefHeight="30.0" prefWidth="500.0">
                        <left>
                           <Label text="Advanced Download Validation: " BorderPane.alignment="CENTER" styleClass="sub_text"/>
