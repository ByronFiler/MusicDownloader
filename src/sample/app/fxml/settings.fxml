                     <right>
                        <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="artistToggle" BorderPane.alignment="CENTER"/>
                     </right>
                  </BorderPane>
                  <BorderPane prefHeight="30.0" prefWidth="200.0">
                     <left>
                        <Label text="Year:" BorderPane.alignment="CENTER" styleClass="sub_text"/>
