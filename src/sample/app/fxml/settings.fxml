                     <BorderPane prefHeight="30.0" prefWidth="500.0">
                        <left>
                           <Label text="Version" BorderPane.alignment="CENTER" styleClass="sub_text"/>
                        </left>
                        <right>
                           <Label fx:id="version" text="Checking..." BorderPane.alignment="CENTER" styleClass="sub_text"/>
                        </right>
                     </BorderPane>
                     <BorderPane prefHeight="30.0" prefWidth="500.0">
                        <left>
                           <Label text="Latest Version" BorderPane.alignment="CENTER" styleClass="sub_text"/>
                        </left>
                        <right>
                           <Label fx:id="latestVersion" text="Checking..." BorderPane.alignment="CENTER" styleClass="sub_text"/>
                        </right>
                     </BorderPane>
                     <BorderPane prefHeight="30.0" prefWidth="500.0">
                        <left>
                           <Label text="YouTube-DL Status" BorderPane.alignment="CENTER" styleClass="sub_text"/>
