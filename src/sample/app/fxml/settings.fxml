                     <right>
                        <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="yearToggle" BorderPane.alignment="CENTER"/>
                     </right>
                  </BorderPane>
                  <BorderPane prefHeight="30.0" prefWidth="200.0">
                     <left>
                        <Label text="Track Number:" BorderPane.alignment="CENTER" styleClass="sub_text"/>
