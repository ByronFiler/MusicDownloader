                        <right>
                           <Label fx:id="ffmpeg" text="Checking..." BorderPane.alignment="CENTER" styleClass="sub_text" />
                        </right>
                     </BorderPane>
                  </VBox>
               </VBox>
               <VBox prefHeight="113.0" prefWidth="500.0">
