                     <right>
                        <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="trackNumberToggle" BorderPane.alignment="CENTER"/>
                     </right>
                  </BorderPane>
               </VBox>
               <VBox prefHeight="97.0" prefWidth="500.0">
                  <HBox prefHeight="25.0" prefWidth="570.0" styleClass="underline">
                     <Label text="Application Configuration" styleClass="sub_title1"/>
                  </HBox>
                  <BorderPane prefHeight="30.0" prefWidth="500.0">
                     <left>
                        <Label text="Dark Theme:" BorderPane.alignment="CENTER" styleClass="sub_text"/>
                     </left>
                     <right>
                        <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="darkThemeToggle" BorderPane.alignment="CENTER"/>
                     </right>
                  </BorderPane>
                  <BorderPane prefHeight="30.0" prefWidth="500.0">
                     <left>
                        <Label text="Data Saver Mode:" BorderPane.alignment="CENTER" styleClass="sub_text"/>
                     </left>
                     <right>
                        <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="dataSaverToggle" BorderPane.alignment="CENTER"/>
                     </right>
                  </BorderPane>
