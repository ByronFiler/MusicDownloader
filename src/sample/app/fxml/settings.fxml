                           <ToggleSwitch onMouseClicked="#validateConfirm" fx:id="advancedValidationToggle" BorderPane.alignment="CENTER"/>
                        </right>
                     </BorderPane>
                  </VBox>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
